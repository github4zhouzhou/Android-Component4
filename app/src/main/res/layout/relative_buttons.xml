<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/id_bt_show_1"
        android:text="start Activity A"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/id_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/id_bt_show_2"
        android:text="start Activity B"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/id_bt_show_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/id_bt_show_3"
        android:text="start Activity C"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/id_bt_show_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/id_bt_show_4"
        android:text="start Activity D"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/id_bt_show_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/id_bt_show_main"
        android:text="start Activity Main"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/id_bt_show_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
